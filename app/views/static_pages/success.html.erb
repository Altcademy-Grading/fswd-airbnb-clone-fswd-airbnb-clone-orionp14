<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Booking Processing</h2>
          <p class="card-text text-center">Your booking is being processed.</p>
          <p class="card-text text-center">Please wait while we confirm your booking.</p>

          <!-- Display booking details -->
          <% if @booking %>
            <h4 class="mt-5">Booking Details:</h4>
            <div class="row mt-3">
              <div class="col-md-6">
                <p><b>Property:</b> <%= @booking.property.title %></p>
                <p><b>Check-in Date:</b> <%= @booking.start_date.strftime('%B %d, %Y') %></p>
                <p><b>Check-out Date:</b> <%= @booking.end_date.strftime('%B %d, %Y') %></p>
              </div>
              <div class="col-md-6">
                <p><b>Total Amount:</b> $<%= @charge.amount %></p>
                <p><b>Guest Name:</b> <%= @booking.user.username %></p>
                <p><b>Email:</b> <%= @booking.user.email %></p>
              </div>
            </div>
          <% else %>
            <p class="text-center mt-4">Booking details not found.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
